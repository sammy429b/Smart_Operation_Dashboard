{
  "rules": {
    "operational_notes": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$noteId": {
        ".write": "auth != null && (data.child('userId').val() === auth.uid || !data.exists())",
        ".validate": "newData.hasChildren(['content', 'userId', 'userName', 'timestamp', 'edited'])"
      }
    },
    "presence": {
      ".read": "auth != null",
      "$userId": {
        ".write": "auth != null && auth.uid === $userId",
        ".validate": "newData.hasChildren(['online', 'lastSeen', 'displayName'])"
      }
    },
    "activity_feed": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$eventId": {
        ".validate": "newData.hasChildren(['type', 'userId', 'userName', 'data', 'timestamp'])"
      }
    }
  }
}