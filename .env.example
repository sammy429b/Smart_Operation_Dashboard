# ===========================================
# Smart Operations Dashboard - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# All variables prefixed with VITE_ are exposed to the client

# -------------------------------------------
# OpenWeatherMap API (for Weather Dashboard)
# Get your API key at: https://openweathermap.org/api
# -------------------------------------------
VITE_OPENWEATHER_API_KEY=your_openweathermap_api_key_here

# -------------------------------------------
# Firebase Configuration (for Collaboration Features)
# Get your config from: Firebase Console > Project Settings
# -------------------------------------------
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_DATABASE_URL=https://your-project-id-default-rtdb.firebaseio.com
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:abc123def456

# -------------------------------------------
# WebSocket Configuration (for Real-time Alerts)
# Default uses Postman Echo for testing
# -------------------------------------------
VITE_WEBSOCKET_URL=wss://ws.postman-echo.com/raw
